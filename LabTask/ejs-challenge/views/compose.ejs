<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="title" class="form-label">Title</label>
    <input type="text" name="titleText" class="form-control" id="title" />
    <label for="post" class="form-label">Post</label>
    <textarea
      class="form-control"
      id="post"
      rows="5"
      name="postText"
    ></textarea>
  </div>
  <button type="submit" name="publishButton" class="btn btn-primary">
    Publish
  </button>
</form>

<%- include("partials/footer") -%>
